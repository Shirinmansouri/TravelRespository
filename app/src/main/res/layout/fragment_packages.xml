<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PackagesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchCustomerActivity"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/headerCruisesSearch">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/headerTextViewDestination"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/centerSectionCruises"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/headerCruisesSearch"
            tools:context=".SearchCustomerActivity">

            <ListView
                android:id="@+id/listViewCruisesSearch"
                android:layout_width="match_parent"
                android:layout_height="600dp">


                </ListView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/footerSection"
            android:layout_below="@+id/centerSectionCruises">

            <Button
                android:id="@+id/btnNext2"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/blue"
                android:text="Next"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/centerSectionCruises"

                tools:ignore="NotSibling" />

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>