<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PackagesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchCustomerActivity"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/headerShowBookings">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/headerTextViewShowBookings"
                android:text="Our Packages are as below:"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/headerShowBookings"
            android:id="@+id/showBookingsTitles">

            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/firstTitleShowBookings"
                android:layout_marginLeft="0dp"
                android:layout_centerVertical="true"
                android:text=""
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/secondTitleShowBookings"
                android:layout_marginLeft="2dp"
                android:layout_centerVertical="true"
                android:text="Name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"
                android:layout_toRightOf="@+id/firstTitleShowBookings"/>

            <TextView
                android:id="@+id/thirdTitleShowBookings"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/secondTitleShowBookings"
                android:text="duration"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/furthdTitleShowBookings"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/thirdTitleShowBookings"
                android:text="visitingPlace"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/fifthdTitleShowBookings"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/furthdTitleShowBookings"
                android:text="Price($)"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/headerCruisesSearch"
            android:layout_below="@+id/headerShowBookings">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/headerTextViewDestination"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/centerSectionCruises"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_below="@+id/showBookingsTitles"
            tools:context=".SearchCustomerActivity">

            <ListView
                android:id="@+id/listViewCruisesSearch"
                android:layout_width="match_parent"
                android:layout_height="800dp">


            </ListView>
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>