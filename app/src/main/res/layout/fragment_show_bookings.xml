<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShowBookingsFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/headerShowBookings">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/headerTextViewShowBookings"
                    android:text="Your bookings are as below:"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/centerSectionShowBookings"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/headerShowBookings"
                tools:context=".SearchCustomerActivity">

                <ListView
                    android:id="@+id/listViewShowBookings"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"


                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/footerSectionShowBookings"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/centerSectionShowBookings">


                <!--TextView
                    android:id="@+id/lblDate"
                    android:layout_width="234dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5sp"
                    android:text="Pick a Date"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/centerSection"
                    tools:ignore="NotSibling" />

                <DatePicker
                    android:id="@+id/datePicker1"
                    android:layout_width="234dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="30dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblDate"
                    tools:ignore="NotSibling" /-->

                <Button
                    android:id="@+id/btnEditABooking"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/blue"
                    android:text="Edit A Booking"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/centerSectionShowBookings"

                    tools:ignore="NotSibling" />

            </RelativeLayout>
        </RelativeLayout>
</FrameLayout>
