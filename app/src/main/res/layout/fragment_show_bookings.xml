<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShowBookingsFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/headerShowBookings">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/headerTextViewShowBookings"
                    android:text="Your bookings are as below:"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/headerShowBookings"
                android:id="@+id/showBookingsTitles">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/firstTitleShowBookings"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:text="Booking ID"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/secondTitleShowBookings"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:text="Paid($)"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"
                    android:layout_toRightOf="@+id/firstTitleShowBookings"/>
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:id="@+id/thirdTitleShowBookings"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:text="Start Date"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"
                    android:layout_toRightOf="@+id/secondTitleShowBookings"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/centerSectionShowBookings"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_below="@+id/showBookingsTitles"
                tools:context=".SearchCustomerActivity">

                <ListView
                    android:id="@+id/listViewShowBookings"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"

                    />
            </RelativeLayout>


        </RelativeLayout>
</FrameLayout>
